<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd
    http://www.springframework.org/schema/mvc
    http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!--扫描controller的注解
        填写自己的控制器的包
    -->
    <context:component-scan base-package="org.ep2.hrmsdt.controller"/>
    <!--静态资源放行问题-->
    <mvc:default-servlet-handler/>
    <!--配置代理-->
    <mvc:annotation-driven/>
    <!--配置同源访问-->
    <mvc:cors>
        <mvc:mapping path="/api/**"
                     allowed-methods="GET,POST,PUT,DELETE,OPTIONS"
                     allow-credentials="true"
        />
    </mvc:cors>

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/api/**"/>
            <mvc:exclude-mapping path="/api/user"/>
            <mvc:exclude-mapping path="/api/user/login"/>
            <mvc:exclude-mapping path="/api/user/logout"/>
            <bean class="org.ep2.hrmsdt.interceptor.LoginInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

</beans>